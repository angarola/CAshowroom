<!DOCTYPE html>
<html ng-app="casAPP">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/fontello.css" rel="stylesheet" />

</head>
<body>
    <div class="text-center">
        <a href="/"><img src="https://cashowrooms.s3-us-west-1.amazonaws.com/CAshowroomLogo.png" /></a>
    </div>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Brands", "Brands", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Calendar", "Calendar", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="footer-social">
                    <div class="col-lg-12 text-center">
                        <span><i class="icon-facebook"></i></span>
                        <a href="https://www.facebook.com/pages/Cristina-Angarola-Showroom/338336386944"><img src="http://cristinaangarola.com/wp-content/themes/cristina-angarola/images/facebook.png" width="28" height="27" alt=""></a>
                        <a href="https://instagram.com/cristinaangarolashowroom"><img src="http://cristinaangarola.com/wp-content/themes/cristina-angarola/images/instagram.png" width="29" height="28" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-12 text-center">
                    <p>860 S Los Angeles St Suite 400, Los Angeles, CA 90014</p>
                </div>
                <div class="col-lg-6 text-center custom-right"><p>T. 213-489-0072</p></div>
                <div class="col-lg-6 text-center custom-left"><p>F. 213-489-2035</p></div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

